<!-- 🌌 BrainReader — Demo Video Block (Neon Blue Edition) -->
<section style="
  position:relative;
  width:100%;
  max-width:960px;
  margin:48px auto;
  padding:24px;
  background:#0b1220;
  border:1px solid #182a3f;
  border-radius:20px;
  box-shadow:0 0 24px rgba(77,224,255,0.08);
  backdrop-filter:blur(8px);
  text-align:center;
  overflow:hidden;">

  <h2 style="
    font-size:1.6rem;
    font-weight:600;
    color:#4de0ff;
    text-shadow:0 0 6px rgba(77,224,255,0.5);
    margin-bottom:16px;">
    ⚙️ BrainReader — Demo (Phase 1: PMAP)
  </h2>

  <div style="
    position:relative;
    border-radius:16px;
    overflow:hidden;
    border:1px solid #1b3b55;
    background:#09111f;
    aspect-ratio:16/9;
    margin-bottom:20px;">
    
    <video
      id="brainreaderVideo"
      src="/lightenergycomputing/assets/media/brainreader_demo.mp4?v=2"
      muted
      autoplay
      playsinline
      loop
      preload="auto"
      style="width:100%;height:100%;object-fit:cover;display:block;border:none;">
      Seu navegador não suporta vídeo HTML5.
    </video>
  </div>

  <p style="color:#a6c8e6;font-size:0.95rem;margin-bottom:20px">
    Se o vídeo não iniciar automaticamente, toque abaixo para abrir em nova aba.
  </p>

  <a href="/lightenergycomputing/assets/media/brainreader_demo.mp4?v=2"
     target="_blank"
     style="
       display:inline-block;
       padding:12px 28px;
       border-radius:40px;
       background:linear-gradient(90deg,#00aaff,#4de0ff);
       color:#fff;
       font-weight:600;
       text-decoration:none;
       letter-spacing:0.5px;
       box-shadow:0 0 20px rgba(77,224,255,0.3);
       transition:all 0.25s ease;
       font-size:1rem;">
    🎬 Abrir Vídeo Completo — BrainReader Demo
  </a>

  <style>
    a:hover {
      box-shadow:0 0 30px rgba(77,224,255,0.55);
      transform:translateY(-2px);
      background:linear-gradient(90deg,#4de0ff,#00bfff);
    }
  </style>
</section>

<script>
(function(){
  const v=document.getElementById('brainreaderVideo');
  const tryPlay=()=>{
    const p=v.play?.();
    if(p && typeof p.then==='function')p.catch(()=>{});
  };
  document.addEventListener('click',tryPlay,{once:true,passive:true});
  document.addEventListener('touchstart',tryPlay,{once:true,passive:true});
  v.addEventListener('loadeddata',tryPlay);
  tryPlay();
})();
</script>
